{% extends 'layout.html.twig' %}

{% block title 'Forum' %}

{% block css %}
    <link rel="stylesheet" href="css/accueil.css">
{% endblock %}

{% block body %}
    <div class="jumbotron" style="margin-top: 40px;">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title text-warning">{{ subject.type.name }}: {{ subject.name }}</h5>
                        <p class="card-text">{{ subject.description }}
                            <br>
                        <p class="card-text text-right">{{ subject.user.firstName }} {{ subject.user.lastName }}: Le {{ subject.createdAt }}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <br />

    <div class="container">
        {{ form_start(form) }}
        <div class="row justify-content-center">
            <div class="col-md-6 text-center">
                {{ form_row(form.user) }}
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-12 text-center">
                {{ form_row(form.content) }}
                {{ form_rest(form) }}
                <div class="text-center">
                    <button class="col-4 btn btn-warning">Ajouter un commentaire</button>
                </div>
            </div>
        </div>
        {{ form_end(form) }}

        <br /><br />

        <div class="row justify-content-center">
            {% for comment in comments %}
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <p class="card-text">{{ comment.content }}
                                <br>
                            <p class="card-text text-right">{{ comment.user.firstName }} {{ comment.user.lastName }}: Le {{ comment.createdAt }}</p>
                        </div>
                    </div>
                    <br />
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}