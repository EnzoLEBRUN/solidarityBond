{% extends 'layout.html.twig' %}

{% block title 'Forum' %}

{% block css %}
    <link rel="stylesheet" href="{{ asset('css/forum.css') }}">
{% endblock %}

{% block body %}
    <div class="jumbotron" style="margin-top: 40px;">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title text-warning">{{ subject.type.name }}: {{ subject.name }}</h4>
                        <p class="card-text text-justify">{{ subject.description }}
                            <br>
                        <p class="card-text text-right">{{ subject.user.firstName }} {{ subject.user.lastName }}: Le {{ subject.createdAt }}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <br />

    <div class="container">
        {{ form_start(form) }}
        <div class="row justify-content-center">
            <div class="col-md-6 text-center">
                {{ form_row(form.user) }}
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-12 text-center">
                {{ form_row(form.content) }}
                {{ form_rest(form) }}
                <div class="text-center">
                    <button class="col-4 btn btn-warning">Ajouter un commentaire</button>
                </div>
            </div>
        </div>
        {{ form_end(form) }}

        <br /><hr><br />

        <div class="row justify-content-center">
            {% for comment in comments %}
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header d-inline-flex top-card">
                            <h6 class="card-title title">{{ comment.user.firstName }} {{ comment.user.lastName }}: Le {{ comment.createdAt }}</h6>
                            <form action="{{ path('forum.deleteComment', {id: comment.id}) }}" method="POST" onsubmit="return confirm('Veuillez confirmer votre choix')" class="text-right" >
                                <input type="hidden" name="_method" value="DELETE">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete') }}">
                                <button class="btn btn-danger text-center delCom">X</button>
                            </form>
                        </div>
                        <div class="card-body">
                            <p class="card-text text-justify">{{ comment.content }}</p>
                        </div>
                    </div>
                    <br />
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}